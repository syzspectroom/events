= simple_form_for(@event) do |f|
  = f.error_notification

  .inputs
    = f.input :name
    = f.input :date
    = f.input :description
    = f.collection_select :city, City.all ,:name, :name, :prompt => 'Select city'
    = f.input :place
    = f.input :type
    = f.input :price
    = image_tag(@event.logo_url(:thumb)) if @event.logo? 
    = f.input :logo
    = f.input :logo_cache, :as => :hidden
    = f.input :website
    = f.input :twitter
    = f.input :hashtag
    = f.input :regurl
    = f.input :speakers
    = f.input :schedule
    = f.input :slug

  .actions
    = f.button :submit
